<%= form_with model: @comment, method: :put do |f| %>
    <div class="form-group">
        <%= f.text_area :body, placeholder: "Comment...", value: @comment.body, class: 'form-control' %>
    </div>
    <div class="d-flex gap-x">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', micropost_path(@comment.micropost), class: 'btn btn-link' %>
      </div>
<% end %>
<div class="container">
    <div id="micropost-<%= @micropost.id %>" class="post-detail">
        <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
        <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
        <p class="timestamp">
            Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
            <% if current_user?(@micropost.user) %>
                <%= link_to "Delete", @micropost, method: :delete, data: {confirm: "Are you sure?" }, class: 'btn btn-danger'%>
                <%= link_to 'Edit',edit_micropost_path(@micropost), class: 'btn btn-primary' %>
            <% end %>
        </p>

        <p class="content">
            <%= @micropost.content %>
        </p>
        <%= image_tag(@micropost.picture.url, class: "image mt-1") if @micropost.picture? %>
    </div>

    <%= render 'comments/form'%>

    <%= render @micropost.comments %>
    
</div>
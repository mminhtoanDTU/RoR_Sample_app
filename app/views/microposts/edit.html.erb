<% provide(:title, "Update micropost") %>
<h1>Update your micropost</h1>

<%= form_with model: @micropost do |f| %>
    
    <div class="form-group">
        <%= f.text_area :content, placeholder: "Compose new micropost...", value: @micropost.content, class: "form-control" %>
    </div>
    <%= image_tag(@micropost.picture.url, class: "image-preview") if @micropost.picture? %>
    
    <span class="picture mt-1" style="display: block">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
    </span>
    <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>